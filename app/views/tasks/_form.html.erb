<%= turbo_frame_tag dom_id(task) do %>
  <%= form_with(model: task, data: { turbo_frame: dom_id(task) }) do |form| %>
    <div class="mb-2">
      <%= form.label :title %>
      <%= form.text_field :title, class: "w-full p-2 border rounded" %>
    </div>

    <%= form.submit class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  <% end %>
<% end %>