<%= turbo_frame_tag "new_post" do %>
  <div class="m4-4 bg-white p-4 rounded shadow">
    <%= form_with model: @post, class: "space-y-3" do |f| %>
      <div>
        <%= f.label :title, class: "block text-sm font-bold text-gray-700" %>
        <%= f.text_field :title, class: "w-full border rounded px-2 py-1" %>
      </div>
      <div>
        <%= f.label :body, class: "block text-sm font-bold text-gray-700" %>
        <%= f.text_area :body, class: "w-full border rounded px-2 py-1", rows: 4 %>
      </div>
      <div>
        <%= f.submit "Create Post", class: "bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700" %>
        <%= link_to "Cancel", posts_path, class: "text-gray-500 hover:underline" %>
      </div>
    <% end %>
  </div>
<% end %>